<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/underlineGray</item>
    </style>
    <style name="HeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:lineHeight" tools:targetApi="p">23sp</item>
    </style>
    <style name="RatesItemHeader">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineHeight" tools:targetApi="p">24dp</item>
        <item name="android:textColor">#191c1f</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="RatesItemDescription">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">-0.011</item>
        <item name="android:lineHeight" tools:targetApi="p">20dp</item>
        <item name="android:textColor">#8B959E</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:lineHeight" tools:targetApi="p">28dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">8</item>
        <item name="android:maxLines">1</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#191C1F</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>
</resources>